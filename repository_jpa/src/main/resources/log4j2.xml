<?xml version="1.0" encoding="UTF-8"?>
<!--status="error" говорит о том. что по умолчанию в root logger будут передаваться сообщения инициализации log4j2 уровня error и выше.
Если поставить status="debug", то увидим все -->
<Configuration status="error" strict="true">
    <Properties>
        <Property name="basePath">log</Property>
    </Properties>

    <Appenders>
        <Appender type="Console" name="CONSOLE">
            <Layout type="PatternLayout" pattern="%m%n"/>
        </Appender>

        <Appender type="Console" name="FLOW">
            <Layout type="PatternLayout" pattern="%C{1}.%M %m %ex%n"/><!-- class and line number-->
        </Appender>

        <Appender type="File" name="FILE_ERROR_LOGGER" fileName="${basePath}/news_management_error.log">
            <Layout type="PatternLayout" pattern="%d %p %C{1.} [%t] %m%n"/>
        </Appender>

        <Appender type="File" name="FILE_TRACE_LOGGER" fileName="${basePath}/news_management_trace.log">
            <Layout type="PatternLayout" pattern="%d %p %C{1.} [%t] %m%n"/>
        </Appender>

        <Appender type="File" name="FILE_SQL" fileName="${basePath}/news_management_sql.log">
            <Layout type="PatternLayout" pattern="%d{yyyy-MMM-dd HH:mm:ss.SSS} %-5level %m%n"/>
        </Appender>

    </Appenders>


    <Loggers>

        <Logger name="FLOW" level="debug" additivity="false">
            <AppenderRef ref="FLOW"/>
        </Logger>

        <Logger name="ERROR_LOGGER" level="debug" additivity="false">
            <AppenderRef ref="FILE_ERROR_LOGGER"/>
        </Logger>

        <Logger name="TRACE_LOGGER" level="debug" additivity="false">
            <AppenderRef ref="FILE_TRACE_LOGGER"/>
        </Logger>

        <Logger name="org.hibernate.SQL" level="trace" additivity="false">
            <AppenderRef ref="FILE_SQL" />
        </Logger>

        <Logger name="org.hibernate.type.descriptor.sql" level="trace" additivity="false">
            <AppenderRef ref="FILE_SQL" />
        </Logger>

        <Root level="debug">
            <AppenderRef ref="CONSOLE"/>
        </Root>
    </Loggers>

</Configuration>